@page "/"
@using System.Net.Http;
@inject HttpClient Http;

<PageTitle>Index</PageTitle>


<div class="mainDiv">

        <div class="childDiv">
        <h3>Hello, biker!</h3>
       
        </div>
    <div class="childDiv">
        <h3>@(isRequestSuccessful ? "API is responsing? " : "API is responsing? ")<img src="@(isRequestSuccessful ? "/img/true.png" : "/img/false.png")" /></h3>
    </div>
</div>

@code {
    private bool isRequestSuccessful = false;

    protected override async Task OnInitializedAsync()
    {
        var response = await Http.GetAsync("api/stations");
        isRequestSuccessful = response.IsSuccessStatusCode;
        Console.WriteLine(response);
    }
}
